resource_name = "Save Point"
script/source = "extends Node2D

var players_in = []

func _process(delta):
	for player in players_in:
		if player.controls.has(Controls.UP):
			players_in.erase(player)
			
			if Com.is_server:
				player.get_meta(\"room\").call(\"Save\", player.get_meta(\"id\"))
			else:
				preload(\"res://Nodes/Effects/PopupText.tscn\").instance().start(self, \"Saved!\", Color.cyan, Vector2.UP * 128)

func _body_enter(body):
	if body.is_in_group(\"players\"):
		players_in.append(body)
	
	if body == Com.player:
		$PressUp.visible = true
		
func _body_exit(body):
	if body.is_in_group(\"players\"):
		players_in.erase(body)
	
	if body == Com.player:
		$PressUp.visible = false"

