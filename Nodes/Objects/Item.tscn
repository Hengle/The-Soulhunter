func _ready():
	if Com.register_node(self, \"Objects/Item\"): return

func on_client_create():
	visible = false

func on_initialized():
	visible = true

func _physics_process(delta):
	gravity.y += 1
	
	if move_and_collide(gravity):
		gravity.y = 0

func set_item(iname):
	item = iname
	$Sprite.texture = load(str(\"res://Graphics/Items/\", item, \".png\"))

func _body_enter(body):
	if body.is_in_group(\"players\"):
		if Com.is_server:
			get_meta(\"room\").call(\"ItemGet\", body.get_meta(\"id\"), item)
		Com.dispose_node(self)

func state_vector_types():
	return [
			Data.TYPE.U16,
			Data.TYPE.U16,
			Data.TYPE.U16
		]

func get_state_vector():
	return [
			item,
			round(position.x),
			round(position.y)
		]

func apply_state_vector(timestamp, diff_vector, vector):
	self.item = vector[0]
	position = Vector2(vector[1], vector[2])"

