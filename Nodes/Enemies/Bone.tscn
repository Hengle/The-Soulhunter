resource_name = "Bone"
script/source = "extends Enemy

var velocity = Vector2(6, -16)

onready var sprite = $Sprite

func _ready():
	if Com.register_node(self, \"Enemies/Bone\"): return
	
	init()

func _physics_process(delta):
	velocity.y += 1
	rotation -= velocity.x
	
	if sprite.position.length_squared() > 1:
		sprite.position *= 0.8
	else:
		sprite.position = Vector2()
	
	var col = move_and_collide(velocity)
	if col: Com.dispose_node(self)

func state_vector_types():
	return [
			Data.TYPE.U16,
			Data.TYPE.U16,
			Data.TYPE.U16
		]

func get_state_vector():
	return [
			round(position.x),
			round(position.y),
			round(velocity.y * 1000)
		]

func apply_state_vector(vector):
	var old_position = position
	position.x = vector[0]
	position.y = vector[1]
	if get_meta(\"initialized\"): sprite.position = (old_position - position) + sprite.position
	
	velocity.y = vector[2] * 0.001"

