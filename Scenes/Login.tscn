resource_name = "LoginScreen"
script/source = "extends Node2D

onready var message = $Label

var error
var register

func _process(delta):
	if Network.account:
		if typeof(Network.account) == TYPE_BOOL: Network.account = $Login.text
		
		if Com.player:
			get_tree().current_scene = Com.game
			queue_free()
	
	if error:
		if error < 10:
			show_message(\"Failed to log in: \" + [\"user doesn't exist\", \"wrong password\", \"user already online\"][error-1], Color.red)
		else:
			show_message(\"Registration failed: \" + [\"user already exists\", \"empty name\", \"empty password\"][error-11], Color.red)
	else:
		show_message(\"\")
	
	if register:
		show_message(\"Registered sucessfully!\", Color.green)

func _on_Login_pressed():
	Network.send_data([\"LOGIN\", $Login.text, $Password.text])

func _on_Register_pressed():
	Network.send_data([\"REGISTER\", $Login.text, $Password.text])

func show_message(_message, color = Color.white):
	message.text = _message
	message.modulate = color"

